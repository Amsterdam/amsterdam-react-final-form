{
  "name": "amsterdam-react-final-form",
  "version": "0.1.1",
  "private": false,
  "repository": "https://github.com/Jeffrey-Zutt/amsterdam-react-final-form.git",
  "description": "Provides adapters for (form-)components defined in [amsterdam-styled-components](https://github.com/Amsterdam/amsterdam-styled-components/pull/491) to be compatible with [react-final-form](https://github.com/final-form/react-final-form).",
  "scripts": {
    "storybook": "start-storybook -p 9009 -s public",
    "storybook:build": "build-storybook -s public -o docs",
    "lint": "eslint --cache --ext .ts,.tsx src",
    "lint:fix": "npm run lint -- --fix",
    "build": "rm -Rf ./dist && tsc ./src/index.ts --esModuleInterop --declaration --skipLibCheck --jsx react --outDir dist && cp ./package.json ./dist/package.json"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@datapunt/asc-assets": "^0.19.1",
    "@datapunt/asc-ui": "^0.19.2-beta.1",
    "final-form": "^4.19.1",
    "lodash.isequal": "^4.5.0",
    "objectFitPolyfill": "^2.3.0",
    "react-final-form": "^6.4.0",
    "react-scripts": "3.4.1",
    "styled-components": "^5.1.0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^5.3.18",
    "@storybook/addon-docs": "^5.3.18",
    "@storybook/addon-links": "^5.3.18",
    "@storybook/addons": "^5.3.18",
    "@storybook/preset-create-react-app": "^2.1.1",
    "@storybook/react": "^5.3.18",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^24.0.0",
    "@types/lodash": "^4.14.150",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/styled-components": "^5.1.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.0",
    "typescript": "~3.7.2"
  },
  "peerDependencies": {
    "@datapunt/asc-assets": "^0.19.1",
    "@datapunt/asc-ui": "^0.19.2-beta.1",
    "final-form": "^4.19.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-final-form": "^6.4.0",
    "styled-components": "^5.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.ts?(x)": [
      "npm run lint:fix"
    ]
  },
  "main": "index.js"
}
